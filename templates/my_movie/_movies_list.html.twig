 {% for movie in movies.results %}
{#     <p>{{ dump(movie.id) }}</p>#}
     <div class="d-flex m-3">
         <img width="100" src="{{ getImageUrl(movie.poster_path) }}" class="mr-3">
         <div>
             <h3 id="movies-list">{{ movie.title }}</h3>
             <p>{{ movie.release_date|date('d/m/y') }}</p>
             <p> {{ movie.overview|slice(0, 150)}}...</p>
             <a href="{{ path('app_save_movie', {id: movie.id, see: 'false'}) }}" class="btn btn-primary btn-round btn-icon mr-2">
                 <i class="fas fa-eye"></i> A voir
             </a>
             <a href="{{ path('app_save_movie', {id: movie.id, see: 'true'}) }}" class="btn btn-secondary btn-round btn-icon">
                 <i class="fas fa-check"></i> Vu
             </a>
         </div>
     </div>

 {% endfor %}

